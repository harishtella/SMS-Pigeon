<div id="nav">
  <%= link_to "Home", root_url %>
  |
  <%= link_to 'Back', :back %>
</div>

<h1>Editing list</h1>

<% form_for(@list) do |f| %>
  <% unless @list.errors.empty? %>
    <div class="errorExplanation" id="errorExplanation">
      <h2>Please fix the problems with this list.</h2>
    </div>
  <% end %>


  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <div class="form_element">
    <% f.fields_for :keyword do |k| %>
      <%= k.label :value, "Keyword" %><br />
      <%= k.text_field :value %>
    <% end %>
    <div class="helper_text">
      Texting in this keyword will subscribe the sender 
      to this list.
    </div>
  </div>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>


  <div class="form_element">
    <%= f.submit 'Update', :class => "submit_button" %>
  </div>
  <div class="form_element">
    <div class="danger_button">
    <%= link_to 'Delete', @list, :confirm => 
    'Are you sure?', :method => :delete%> 
    </div>
  </div>
<% end %>

